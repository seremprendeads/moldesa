document.addEventListener("DOMContentLoaded", function () {
  // 1️⃣ Cargar primero style.css
  const mainStyle = document.createElement("link");
  mainStyle.rel = "stylesheet";
  mainStyle.href = "css/style.css"; // Ajusta la ruta si es diferente
  mainStyle.onload = () => {
    console.log("style.css cargado");

    // 2️⃣ Cuando termine, cargar style-no-index.css
    const secondaryStyle = document.createElement("link");
    secondaryStyle.rel = "stylesheet";
    secondaryStyle.href = "css/style-no-index.css"; // Ajusta la ruta
    document.head.appendChild(secondaryStyle);
    console.log("style-no-index.css cargado");
  };

  document.head.appendChild(mainStyle);
});
